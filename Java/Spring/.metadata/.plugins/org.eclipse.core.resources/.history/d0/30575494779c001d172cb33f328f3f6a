
public class Driver extends Car {

	public Driver() {
		super();
	}
	
	public void driving() {
		setGasLevel(-1);
		System.out.println("You drive the car.");
		System.out.println("Gas remaining: " + getGasLevel() + "/10");
	}
	
	public void booster() {
		setGasLevel(-3);
		System.out.println("You used the booster.");
		System.out.println("Gas remaining: " + getGasLevel() + "/10");
	}
	
	public void refuel() {
		setGasLevel(2);
		System.out.println("You refueld.");
		System.out.println("Gas remaining: " + getGasLevel() + "/10");
	}
}


